<?xml version="1.0"?>
<object name="portal_controlpanel"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="edition1.menu"
        purge="False">

  <configlet title="Menu settings"
             action_id="MenuSettings"
             appId="edition1.menu"
